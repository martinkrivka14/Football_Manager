generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Team {
  id        Int      @id
  code      String
  country   String
  founded   Int?
  national Boolean
}

model Player {
  id            Int      @id
  firstname      String  
  lastname       String
  age             Int
  dateOfBirth     DateTime
  placeOfBirth    String
  countryOfBirth  String
  nationality     String
  height          Int
  weight          Int
  jerseyNumber    Int
  position        String
}

model Venue {
  id        Int      @id
  name      String
  address  String
  city    String
  capacity  Int
  surface   String
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  loggedIn  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
}
