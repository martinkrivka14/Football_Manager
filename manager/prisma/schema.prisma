generator client {
  provider = "prisma-client"
  previewFeatures = ["driverAdapters"]
  output = "..app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String?
  code      String? 
  country   String?
  founded   Int?
  national  Boolean  @default(false)
  logo      String?
  leagueId  Int?
  league    League? @relation(fields: [leagueId], references: [id])
  venues Venue?
}

model Venue {
  id        Int      @id @default(autoincrement())
  name      String?
  address  String?
  city    String?
  capacity  Int?
  surface   String?
  image     String?
  team    Team? @relation(fields: [teamId], references: [id])
  teamId Int? @unique
}

model League {
  id        Int      @id @default(autoincrement())
  name      String?
  logo      String?
  teams Team[]
}

model Player {
  id            Int      @id @default(autoincrement())
  name         String?
  firstname      String? 
  lastname       String?
  age             Int?
  nationality     String?
  height          Int?
  weight          Int?
  jerseyNumber    Int?
  position        String?
  photo           String?
}




model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  loggedIn  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
}
